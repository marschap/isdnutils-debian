# example for dynamic IP assignment
# (only one of several possible ways)

REMOTE=172.16.0.20

# noipdefault: don't use hosts IP as default

/sbin/ipppd user myusername :$REMOTE  \
        noipdefault \
        ipcp-accept-remote \
        -vjccomp -ac -pc \
        -detach \
        mru 1524 \
        -bsdcomp \
        debug \
        /dev/ippp0 /dev/ippp1 /dev/ippp2 &


