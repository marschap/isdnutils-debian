#!/usr/bin/make -f
# debian.rules file - for isdnutils (2.0).
# Copyright 1996,1997 by Christian Schwarz.
# I hereby give you perpetual unlimited permission to copy,
# modify and relicense this file, provided that you do not remove
# my name from the file itself.  (I assert my moral right of
# paternity under the Copyright, Designs and Patents Act 1988.)

package=isdnutils

build:
	$(checkdir)
	$(MAKE)
	touch build

clean:
	$(checkdir)
	-rm -f build
	-$(MAKE) -i clean
	rm -f tools/imontty-0.3/imont
	rm -f tools/isdnlog-2.41/bin/{isdnlog,isdnrep}
	-rm -rf *~ debian/tmp debian/*~ debian/files*

binary-indep:  checkroot build
	$(checkdir)
# There are no architecture-independent files to be uploaded
# generated by this package.  If there were any they would be
# made here.

binary-arch:	checkroot build
	$(checkdir)
	-rm -rf debian/tmp
	# Install directories.
	install -d debian/tmp debian/tmp/DEBIAN
	cd debian/tmp && install -d `cat ../dirs`
        # Install isdn4k-utils docs.
	install -o root -g root -m 644 CREDITS CAUSE.1tr6 README README.tcpdump tcpdump-3.0.3-isdn.diff.gz debian/tmp/usr/doc/isdnutils/
	install -o root -g root -m 755 etc/{rc.isdn,rc.isdn.syncppp,rc.isdn.syncppp.1} debian/tmp/usr/doc/isdnutils/examples/
	# Install device related stuff.
	install -o root -g root -m 644 doc/ttyI.4 debian/tmp/usr/man/man4/
	(cd debian/tmp/usr/man/man4; ln -sf ttyI.4.gz cui.4.gz)
	install -o root -g root -m 755 -s icn/icnctrl pcbit/pcbitctl teles/telesctrl isdn/isdnctrl debian/tmp/sbin/
	install -o root -g root -m 644 doc/{isdnctrl,icnctrl,telesctrl,pcbitctl}.8 debian/tmp/usr/man/man8/
	# Install low level control programs and daemons.
	# Install PPP daemons.
	install -o root -g bin -m 755 -s ppp4i4k/ipppd.2.2.0f/ipppd debian/tmp/usr/sbin/
	install -o root -g root -m 644 ppp4i4k/ipppd.2.2.0f/pppd.8 debian/tmp/usr/man/man8/ipppd.8
	install -o root -g root -m 755 -s ppp4i4k/ipppstats/ipppstats debian/tmp/usr/sbin/
	install -o root -g root -m 644 ppp4i4k/ipppstats/ipppstats.8 debian/tmp/usr/man/man8/
	# Install monitoring tools.
	install -o root -g bin -m 755 -s isdn/iprofd debian/tmp/usr/sbin/
	install -o root -g root -m 644 doc/iprofd.8 debian/tmp/usr/man/man8/
	install -o root -g bin -m 755 -s tools/imon/imon tools/imontty-0.3/imontty debian/tmp/usr/sbin/
	install -o root -g root -m 644 tools/imontty-0.3/imontty.8 debian/tmp/usr/man/man8/
        # Install isdnbutton.
	install -o root -g dialout -m 4750 -s tools/isdnbutton-1.1/isdnbutton debian/tmp/usr/X11R6/bin/
	# Install Debian specific files.
	install -o root -g root -m 755 debian/postinst debian/tmp/DEBIAN/
	cp debian/copyright debian/tmp/usr/doc/$(package)/
	cp debian/changelog debian/tmp/usr/doc/$(package)/changelog.Debian
	cp debian/TODO.Debian debian/tmp/usr/doc/$(package)/
	-gzip -9 -q debian/tmp/usr/doc/$(package)/*
	-gunzip debian/tmp/usr/doc/$(package)/copyright
	-gzip -9 -q debian/tmp/usr/doc/$(package)/examples/*
	-gzip -9 -q debian/tmp/usr/man/man?/*
	dpkg-gencontrol
	dpkg --build debian/tmp ..

define checkdir
	test -f README
endef

# Below here is fairly generic really

binary:			binary-indep binary-arch

source diff:
	@echo >&2 'source and diff are obsolete - use dpkg-source -b'; false
 
checkroot:
	$(checkdir)
	test root = "`whoami`"

.PHONY: binary binary-arch binary-indep clean checkroot
