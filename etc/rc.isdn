#!/bin/sh
#
# Sample-Script for setup of ISDN-networking at boot. (ICN-1TR6-Version)
#
# BE SHURE TO EDIT THIS FILE BEFORE USING IT!!!!!

/sbin/modprobe icn
/sbin/icnctrl load /etc/isdn/loadpg.bin /etc/isdn/pc_1t_ca.bin
/sbin/iprofd /etc/isdn/modemsettings

# wuff
/sbin/isdnctrl addif isdn0             # Create new interface "isdn0"
/sbin/isdnctrl addphone isdn0 in xxx   # Set incoming phone-number
/sbin/isdnctrl addphone isdn0 out xxx  # Set outgoung phone-number
/sbin/isdnctrl eaz isdn0 5             # Set local EAZ
/sbin/isdnctrl huptimeout isdn0 300    # Hangup-Timeout is 300 sec.
/sbin/isdnctrl chargehup isdn0 on      # Hangup before next Charge-Info
/sbin/isdnctrl secure isdn0 on         # Accept only configured phone-number
/sbin/ifconfig isdn0 193.175.24.244 broadcast 193.175.24.255 netmask 255.255.255.0 metric 1
/sbin/route add -net 194.45.138.0 isdn0

# hlinux
/sbin/isdnctrl addif isdn1
/sbin/isdnctrl addphone isdn1 in xxx
/sbin/isdnctrl addphone isdn1 out xxx
/sbin/isdnctrl eaz isdn1 5
/sbin/isdnctrl huptimeout isdn1 20
/sbin/isdnctrl chargehup isdn1 off
/sbin/isdnctrl secure isdn1 on
